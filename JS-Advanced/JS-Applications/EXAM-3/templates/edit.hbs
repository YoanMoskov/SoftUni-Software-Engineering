{{> header}}
<main id="home-logged">
    <section class="first-section">
        <section class="background-container">
            <form action="#/edit/{{currPost.id}}" method="POST" class="edit-form">
                <h1>Edit Post</h1>
                <label for="title">Title</label>
                <input type="text" name="title" value="{{currPost.title}}">
                <label for="category">Category</label>
                <input type="text" name="category" value="{{currPost.category}}">
                <label for="content">Content</label>
                <textarea name="content" cols="30" rows="7">{{currPost.content}}</textarea>
                <button>Edit</button>
                <a href="" id="close-btn"><img src="images/close.png"></a>
            </form>
        </section>
    </section>
    <section class="second-section">
        <h3>Posts</h3>
        <hr>
        <div class="posts-row">
            {{#each posts as |post|}}
                {{> post}}
            {{/each}}
        </div>
    </section>
</main>