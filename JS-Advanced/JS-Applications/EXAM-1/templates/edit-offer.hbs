{{> header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form action="#/edit-offer/{{ offer.id }}" method="POST">
    <div>
        <input type="text" placeholder="Name..." value="{{offer.name}}" name="name">
    </div>
    <div>
        <input type="text" placeholder="Price..." value="{{offer.price}}" name="price">
    </div>
    <div>
        <input type="text" placeholder="Image url..." value="{{offer.imageURL}}" name="imageURL">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..." value="{{offer.description}}" name="description"></textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." value="{{offer.brand}}" name="brand">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{> footer}}